<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/galaxy"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#150839"
        android:gravity="top"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/home_text"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#150839"
            android:backgroundTint="#150839"
            android:gravity="center"
            android:text="Home"
            android:textColor="@color/white"
            android:textSize="23dp" />

        <ImageButton
            android:id="@+id/geosearch_button"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:background="@android:color/transparent"
            app:srcCompat="@android:drawable/ic_dialog_map" />

        <!--        <com.google.android.material.button.MaterialButton-->
        <!--            android:id="@+id/geosearch_button"-->
        <!--            style="@style/Widget.AppCompat.Button.Borderless"-->
        <!--            android:layout_width="10dp"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:layout_marginEnd="20dp"-->
        <!--            android:layout_alignParentEnd="true"-->
        <!--            android:gravity="center_horizontal|top"-->
        <!--            app:srcCompat="@android:drawable/ic_dialog_map" />-->

        <com.google.android.material.button.MaterialButton
            android:id="@+id/search_button"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="6dp"
            android:gravity="center_horizontal|top"
            app:icon="?android:attr/actionModeWebSearchDrawable" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:backgroundTint="#150839"
        android:background="@drawable/rounded_view"
        android:layout_marginTop="20dp">


        <TextView
            android:id="@+id/welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:text="Welcome back!"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/player_ranks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welcome"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:textSize="20dp">
        </TextView>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>

    </RelativeLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical">

        <RelativeLayout
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:backgroundTint="#150839"
            android:background="@drawable/rounded_view"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/leaderboard_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="Leaderboard"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/leaderboard_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/leaderboard_title"
                android:paddingLeft="10dp"
                android:text="1 Micheal Scott 1688"
                android:textColor="@color/white"
                android:textSize="17dp"
                />

            <TextView
                android:id="@+id/view_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_alignParentBottom="true"
                android:text="View more..."
                android:layout_marginBottom="50dp"
                android:textColor="@color/white"
                android:textSize="18dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="#150839"
            android:background="@drawable/rounded_view"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >

            <TextView
                android:id="@+id/most_scanned_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Most Scanned QR Code"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/most_scanned_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/most_scanned_title"
                android:textColor="@color/white"
                android:paddingLeft="10dp"
                android:layout_centerHorizontal="true"
                android:text="LunarFloGalMegaSpectralTitan"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <RelativeLayout
                android:id="@+id/vis_rep"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="15dp"
                android:layout_centerInParent="true"
                android:layout_below="@+id/most_scanned_text"
                >

                <ImageView
                    android:id="@+id/face1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/head1"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/face2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/head2"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/eye1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/eye1"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/eye2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/eye2"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/eyebrow1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/eyebrow1"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/eyebrow2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/eyebrow2"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/nose1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/nose1"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/nose2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/nose2"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/mouth1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/mouth1"
                    android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/mouth2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/mouth2"
                        android:visibility="invisible" />
            </RelativeLayout>

            <TextView
                android:id="@+id/count_players_scanned_qr_code"
                android:layout_width="wrap_content"
                android:layout_below="@+id/vis_rep"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="people scanned this QR Code!"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30dp"
                android:textSize="18dp"/>



        </RelativeLayout>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_gravity="bottom"
        android:id="@+id/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#150839"
        android:backgroundTint="#150839"
        app:itemIconSize="40dp"
        app:itemIconTint="#ffff"
        app:itemTextColor="#ffff"
        app:menu="@menu/nav_bar" />

</LinearLayout>



