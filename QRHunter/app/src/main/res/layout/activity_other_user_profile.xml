<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/galaxy"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@drawable/rounded_view"
        android:backgroundTint="#CCCCCC">

        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="80dp"
            android:layout_height="82dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/round_background"
            android:src="@drawable/profilepic" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="@color/white"
            android:padding="8dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/username2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/backButton"
            android:layout_marginTop="16dp"
            android:text="Name"
            android:textSize="18sp"
            android:textColor="#333333"/>

        <TextView
            android:id="@+id/username3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/username2"
            android:layout_marginTop="8dp"
            android:text="Username"
            android:textSize="18sp"
            android:textColor="#333333"/>

        <TextView
            android:id="@+id/highest_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/username3"
            android:layout_marginTop="8dp"
            android:text="Highest score:"
            android:textSize="18sp"
            android:textColor="#333333"/>

        <TextView
            android:id="@+id/user_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/highest_score"
            android:layout_marginTop="16dp"
            android:text="User Score"
            android:textSize="18sp"
            android:textColor="#333333"/>

        <TextView
            android:id="@+id/scannedCodeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_score"
            android:layout_marginTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="         SCANNED QR CODES:"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/qrCodeListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/scannedCodeTitle"
            android:layout_marginTop="16dp"
            android:background="#8D869A" />

    </RelativeLayout>

</RelativeLayout>


