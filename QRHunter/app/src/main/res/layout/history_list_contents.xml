<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/face1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/head1"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/face2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/head2"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/eye1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/eye1"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/eye2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/eye2"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/eyebrow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/eyebrow1"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/eyebrow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/eyebrow2"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/nose1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/nose1"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/nose2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/nose2"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/mouth1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/mouth1"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/mouth2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/mouth2"
            android:visibility="invisible" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/scanned_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#433b3f">
        </TextView>
        <TextView
            android:id="@+id/scanned_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score: "
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:textColor="#433b3f">
        </TextView>
    </LinearLayout>

</LinearLayout>